<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MasaTvari">



    <TextView
        android:id="@+id/tekstvju"
        android:text="MASA"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/duzina"
        android:layout_marginLeft="10dp"
        app:layout_constraintRight_toRightOf="@id/visina"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        />


    <EditText
        android:id="@+id/duzina"
        android:hint="Unesi dužinu"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="280dp"
        />

    <EditText
        android:id="@+id/sirina"
        android:hint="Unesi širinu"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        app:layout_constraintRight_toLeftOf="@+id/duzina"
        android:layout_marginLeft="150dp"
        app:layout_constraintTop_toTopOf="@+id/duzina"
        app:layout_constraintBottom_toBottomOf="@+id/duzina"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="150dp"
        />

    <EditText
        android:id="@+id/visina"
        android:hint="Unesi visinu"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/duzina"
        app:layout_constraintBottom_toBottomOf="@+id/duzina"
        android:layout_marginLeft="280dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        />

    <EditText
        android:id="@+id/gustoca"
        android:hint="Unesi gustoću"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/visina"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/visina"
        android:layout_marginLeft="280dp"
        app:layout_constraintRight_toRightOf="@+id/visina"
        android:layout_marginRight="20dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/racun"
        android:text="Izračunaj"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/gustoca"
        android:layout_marginRight="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/gustoca"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="@id/gustoca"
        android:layout_marginTop="0dp"
        />

        <TextView
            android:id="@+id/rjesenje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sirina"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toLeftOf="@id/duzina"
            android:layout_marginLeft="10dp"
            app:layout_constraintRight_toRightOf="@id/visina"
            android:layout_marginRight="20dp"
            />















</androidx.constraintlayout.widget.ConstraintLayout>